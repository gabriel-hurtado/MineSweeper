<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        class="com.example.gabriel.minesweeper.QueryFrag"
        android:layout_height="match_parent"
        android:layout_width="0px"
        android:layout_weight="60"
        android:id="@+id/FrgQuery"
        tools:layout="@layout/frag_query" />

    <fragment
        class="com.example.gabriel.minesweeper.RegisterFrag"
        android:layout_height="match_parent"
        android:layout_width="0px"
        android:layout_weight="40"
        android:id="@+id/FrgRegister"
        tools:layout="@layout/frag_register" />

</LinearLayout>